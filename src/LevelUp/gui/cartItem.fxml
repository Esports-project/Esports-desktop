            <children>
                <HBox prefHeight="51.0" prefWidth="185.0">
                    <children>
                        <Label fx:id="nameLabelCart" prefHeight="49.0" prefWidth="137.0" text="Macbook">
                            <font>
                                <Font name="SansSerif Regular" size="24.0" />
                            </font>
                        </Label>
                        <Label fx:id="priceLableCart" prefHeight="49.0" prefWidth="101.0" text="\\$500">
                            <font>
                                <Font name="SansSerif Bold" size="18.0" />
                            </font>
                        </Label>
                    </children>
                    <VBox.margin>
                        <Insets left="20.0" top="20.0" />
                    </VBox.margin>
                </HBox>
                <ImageView fx:id="imgCart" fitHeight="115.0" fitWidth="180.0" pickOnBounds="true" preserveRatio="true">
